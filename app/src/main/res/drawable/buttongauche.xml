<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="10dip"
                android:bottomRightRadius="10dp"/>
            <stroke android:width="1dip" android:color="#eee" />
            <gradient android:angle="-90" android:startColor="#eee" android:endColor="#eee"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="10dip"
                android:bottomRightRadius="10dp"/>
            <stroke android:width="1dip" android:color="#eee" />
            <solid android:color="#eee"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="10dip"
                android:bottomRightRadius="10dp"/>
            <stroke android:width="1dip" android:color="#eee" />
            <gradient android:angle="-90" android:startColor="#eee" android:endColor="#eee" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="10dip"
                android:bottomRightRadius="10dp"/>
            <stroke android:width="1dip" android:color="#222" />
            <gradient android:angle="-90" android:startColor="#222" android:endColor="#222" />
        </shape>
    </item>
</selector>